@model object
@{
    var props = Model.GetType().GetProperties();
    var id = Model.GetType().GetProperty("Id")?.GetValue(Model);
}

<table class="table table-bordered table-hover">
    <tbody>
    @foreach (var prop in props)
    {
        <tr>
            <th>@prop.Name</th>
            <td>
                @if (prop.Name.Equals("Avatar", StringComparison.OrdinalIgnoreCase))
                {
                    var avatarPath = prop.GetValue(Model)?.ToString();
                    if (!string.IsNullOrWhiteSpace(avatarPath))
                    {
                        <img src="@avatarPath" alt="Avatar" width="100" height="100" class="rounded-circle border" />
                    }
                    else
                    {
                        <span>(No avatar)</span>
                    }
                }
                else
                {
                    @prop.GetValue(Model)
                }
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="mt-3 d-flex gap-2">
    <a asp-page="Edit" asp-route-id="@id" class="btn btn-warning">Edit</a>
    <a asp-page="Index" class="btn btn-secondary">Back to List</a>
</div>