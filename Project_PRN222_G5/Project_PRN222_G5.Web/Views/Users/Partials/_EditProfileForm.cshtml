@model Project_PRN222_G5.DataAccess.DTOs.Users.Requests.UpdateInfoUser

<div class="row d-none animate-fade" id="edit-container">
    <div class="col-12">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4>Edit Profile</h4>
            </div>
            <div class="card-body">
                <form asp-action="UpdateProfile" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="FullName" class="form-label"></label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DayOfBirth" class="form-label"></label>
                        <input asp-for="DayOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DayOfBirth" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Gender</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="Male" checked="@(Model.Gender == "Male")" />
                            <label class="form-check-label">Male</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" asp-for="Gender" value="Female" checked="@(Model.Gender == "Female")" />
                            <label class="form-check-label">Female</label>
                        </div>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Avatar" class="form-label">Avatar</label>
                        <input asp-for="Avatar" type="file" accept=".jpg,.jpeg,.png" class="form-control" onchange="previewAvatar(event)" />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                        <div class="mt-2">
                            <img id="avatar-preview" src="#" alt="Avatar preview" class="img-thumbnail d-none" style="max-height: 100px;" />
                        </div>
                    </div>
                    <div class="d-flex justify-content-between pt-3">
                        <button type="submit" class="btn btn-warning text-white">Save Changes</button>
                        <button type="button" class="btn btn-secondary" id="btn-cancel-edit">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>