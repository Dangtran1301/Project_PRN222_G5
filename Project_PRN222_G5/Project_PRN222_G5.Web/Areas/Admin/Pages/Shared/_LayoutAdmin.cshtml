@using Project_PRN222_G5.Web.Utilities
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - An Cap Cinema</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Pages" asp-action="Home">An Cap Cinema</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity is { IsAuthenticated: true })
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Users" asp-action="Info">Profile</a>
                            </li>
                            <li class="nav-item">
                                <form method="post" asp-controller="Auth" asp-action="Logout" class="d-inline">
                                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                                </form>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar Toggle Button -->
            <button class="btn btn-outline-light me-2 d-md-none" type="button" data-bs-toggle="collapse" data-bs-target="#sidebar" aria-expanded="false" aria-controls="sidebar">
                ☰
            </button>
            <!-- Sidebar -->
            <nav id="sidebar" class="collapse d-md-block col-md-3 col-lg-2 bg-light sidebar">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index" asp-area="Admin">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#" data-bs-toggle="collapse" data-bs-target="#appsSubmenu">Management</a>
                            <div class="collapse" id="appsSubmenu">
                                <ul class="nav flex-column ms-3">
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-page="@PageRoutes.Users.Index">User Manager</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-page="@PageRoutes.Cinema.Index">Cinema Manager</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-page="@PageRoutes.Room.Index">Room Manager</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-page="@PageRoutes.Seat.Index">Seat Manager</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-page="@PageRoutes.Movie.Index">Movie Manager</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-page="@PageRoutes.Showtime.Index">Showtime Manager</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-area="Admin" asp-page="@PageRoutes.Booking.Index">Booking Manager</a>
                                    </li>
                                </ul>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted py-3">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center d-sm-flex-column align-items-sm-start gap-sm-5">
                <span>© 2025 - An Cap Cinema</span>
                <div class="d-flex gap-5 d-sm-flex-column gap-sm-2">
                    <a asp-area="Admin" asp-page="/Index" class="text-muted text-decoration-none">Dash Board</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        if (typeof bootstrap === 'undefined') {
            document.write('<script src="/lib/bootstrap/js/bootstrap.bundle.min.js"><\/script>');
        }
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <div id="toast-container" class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1100;"></div>

    <script>
        function showToast(message, type = 'success') {
            console.log('Showing toast:', message, type);
            const toastId = 'toast-' + Date.now();
            const toastHtml = `
                <div id="${toastId}" class="toast align-items-center text-white bg-${type} border-0 mb-2" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="d-flex">
                        <div class="toast-body">
                            ${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>`;
            const container = document.getElementById('toast-container');
            container.insertAdjacentHTML('beforeend', toastHtml);
            const toastEl = document.getElementById(toastId);
            const toast = new bootstrap.Toast(toastEl, { delay: 5000 });
            toast.show();
            toastEl.addEventListener('hidden.bs.toast', () => toastEl.remove());
        }

        @if (TempData["SuccessMessage"] is string msg)
        {
                    <text>showToast(@Html.Raw(Json.Serialize(msg)), 'success');</text>
        }

        @if (TempData["ErrorMessage"] is string err)
        {
                    <text>showToast(@Html.Raw(Json.Serialize(err)), 'danger');</text>
        }
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const sidebar = document.getElementById("sidebar");
            const main = document.querySelector("main");
            const toggleButton = document.querySelector('[data-bs-target="#sidebar"]');

            toggleButton.addEventListener("click", function () {
                sidebar.classList.toggle("show");
            });

            sidebar.addEventListener("show.bs.collapse", function () {
                main.classList.remove("col-md-12");
                main.classList.add("col-md-9");
            });

            sidebar.addEventListener("hide.bs.collapse", function () {
                main.classList.remove("col-md-9");
                main.classList.add("col-md-12");
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>