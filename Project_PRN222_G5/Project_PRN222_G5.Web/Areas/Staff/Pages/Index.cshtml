@page
@model Project_PRN222_G5.Web.Areas.Staff.Pages.IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <h1 class="mt-4">Sales Overview</h1>

    <div class="row mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Weekly Stats</h5>
                    <p>Average sales</p>
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                            Action
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Action</a></li>
                            <li><a class="dropdown-item" href="#">Another action</a></li>
                            <li><a class="dropdown-item" href="#">Something else here</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Top Sales</h5>
                    <p>Johnathan Doe</p>
                    <p class="text-success">+68%</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Best Seller</h5>
                    <p>MaterialPro Admin</p>
                    <p class="text-success">+68%</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Daily Ticket Sales</h5>
                    <canvas id="dailyTicketChart" width="400" height="200">
                        {
                        "type": "line",
                        "data": {
                        "labels": ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
                        "datasets": [{
                        "label": "Ticket Sales",
                        "data": [120, 150, 180, 200, 220, 250, 230],
                        "borderColor": "#36A2EB",
                        "backgroundColor": "rgba(54, 162, 235, 0.2)",
                        "fill": true,
                        "tension": 0.1
                        }]
                        },
                        "options": {
                        "responsive": true,
                        "plugins": {
                        "legend": {
                        "position": "top"
                        },
                        "title": {
                        "display": true,
                        "text": "Daily Ticket Sales (June 2025)"
                        }
                        },
                        "scales": {
                        "y": {
                        "beginAtZero": true
                        }
                        }
                        }
                        }
                    </canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Top Movies of the Week</h5>
                    <canvas id="topMoviesChart" width="400" height="200">
                        {
                        "type": "pie",
                        "data": {
                        "labels": ["Movie A", "Movie B", "Movie C", "Movie D"],
                        "datasets": [{
                        "data": [300, 250, 200, 150],
                        "backgroundColor": ["#FF6384", "#36A2EB", "#FFCE56", "#4BC0C0"],
                        "borderColor": "#fff",
                        "borderWidth": 1
                        }]
                        },
                        "options": {
                        "responsive": true,
                        "plugins": {
                        "legend": {
                        "position": "top"
                        },
                        "title": {
                        "display": true,
                        "text": "Top Movies (Week of June 17, 2025)"
                        }
                        }
                        }
                        }
                    </canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="card m-3">
        <div class="card-body">
            <h5 class="card-title">Products Performance</h5>
            <p>Ample Admin Vs Pixel Admin</p>
            <p>March 2025</p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Assigned</th>
                            <th>Name</th>
                            <th>Priority</th>
                            <th>Budget</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Sunil Joshi<br>Web Designer</td>
                            <td>Elite Admin</td>
                            <td>Low</td>
                            <td>$3.9K</td>
                        </tr>
                        <tr>
                            <td>Andrew McDownland<br>Project Manager</td>
                            <td>Real Homes WP Theme</td>
                            <td>Medium</td>
                            <td>$24.5K</td>
                        </tr>
                        <tr>
                            <td>Christopher Jamil<br>SEO Manager</td>
                            <td>MedicalPro WP Theme</td>
                            <td>High</td>
                            <td>$12.8K</td>
                        </tr>
                        <tr>
                            <td>Nirav Joshi<br>Frontend Engineer</td>
                            <td>Hosting Press HTML</td>
                            <td>Low</td>
                            <td>$2.4K</td>
                        </tr>
                        <tr>
                            <td>Micheal Doe<br>Content Writer</td>
                            <td>Helping Hands WP Theme</td>
                            <td>Low</td>
                            <td>$9.3K</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        const dailyTicketCtx = document.getElementById('dailyTicketChart').getContext('2d');
        new Chart(dailyTicketCtx, {
            type: 'line',
            data: {
                labels: ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"],
                datasets: [{
                    label: 'Ticket Sales',
                    data: [120, 150, 180, 200, 220, 250, 230],
                    borderColor: '#36A2EB',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    fill: true,
                    tension: 0.1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Daily Ticket Sales (June 2025)'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const topMoviesCtx = document.getElementById('topMoviesChart').getContext('2d');
        new Chart(topMoviesCtx, {
            type: 'pie',
            data: {
                labels: ["Movie A", "Movie B", "Movie C", "Movie D"],
                datasets: [{
                    data: [300, 250, 200, 150],
                    backgroundColor: ["#FF6384", "#36A2EB", "#FFCE56", "#4BC0C0"],
                    borderColor: "#fff",
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Top Movies (Week of June 17, 2025)'
                    }
                }
            }
        });
    </script>
}