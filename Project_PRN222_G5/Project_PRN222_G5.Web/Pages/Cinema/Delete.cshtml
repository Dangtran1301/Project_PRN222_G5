@page
@model Project_PRN222_G5.Web.Pages.Cinema.DeleteModel

@{
    ViewData["Title"] = "Delete Cinema";
}

<h1>Delete Cinema</h1>

<h3>Are you sure you want to delete this cinema?</h3>
<div>
    <h4>@Model.Cinema.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Cinema.Name</dd>
        <dt class="col-sm-2">Address</dt>
        <dd class="col-sm-10">@Model.Cinema.Address</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Cinema.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
