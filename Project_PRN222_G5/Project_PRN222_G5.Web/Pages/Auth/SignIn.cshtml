@page
@model Project_PRN222_G5.Web.Pages.Auth.SignInModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Sign In</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @Model.ErrorMessage
    </div>
}

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3">
        <label asp-for="Input.Username" class="form-label">Username</label>
        <input name="Input.Username" asp-for="Input.Username" class="form-control" />
        <span asp-validation-for="Input.Username" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Input.Password" class="form-label">Password</label>
        <input name="Input.Password" asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Sign In</button>
        <a asp-page="/Account/SignUp" class="btn btn-secondary">Sign Up</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}